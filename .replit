modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Development Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend API Server"

[[workflows.workflow]]
name = "Frontend Development Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Backend API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && npm run dev"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 39533
externalPort = 3002

[[ports]]
localPort = 39817
externalPort = 3000

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "cd backend && npm start & npm run dev"]
build = ["bash", "-c", "cd backend && npm run build"]
